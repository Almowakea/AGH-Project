
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2></h2>

<table id="users" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                User Name
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Email
            </th>
            <th>
                ID Number
            </th>
            <th>
                Role
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#users").DataTable({
                ajax: {
                    url: "/api/users",
                    method: "GET",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, user) {
                            return "<a href='/users/edituser/" + user.ID + "'>" + user.User_First_Name +" "+user.User_Last_Name + "</a>";
                        }
                    },
                    {
                        data: "User_Phone_Number",
                        render: function (data, type) {
                            return "<label>" + data + "</label>";
                        }
                    },
                    {
                        data: "User_Email",
                        render: function (data, type) {
                            return "<label>" + data + "</label>";
                        }
                    },
                    {
                        data: "User_ID",
                        render: function (data, type) {
                            return "<label>" + data + "</label>";
                        }
                    },
                    {
                        data:"User_Type_ID",
                        render: function (data, type) {
                            let role = "";
                            switch (data) {
                                case 1:
                                    role = "Instructor";
                                    break;
                                case 2:
                                    role = "Assistant";
                                    break;
                                case 3:
                                    role = "Student";
                                    break;
                                case 4:
                                    role = "Admin";
                                    break;
                            }
                            return "<label>" + role + "</label>";
                        }
                    },
                    {
                        data: "ID",
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-user-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });


            $("#users").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this user?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/Users/" + button.attr("data-user-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });
        });

    </script>
}
