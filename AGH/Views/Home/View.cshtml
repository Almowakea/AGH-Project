@model AGH.User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
</head>
<body>

    @{
        ViewBag.Title = "Login";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h2>Login</h2>

    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {
        <div class="form-horizontal">

            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @if (@ViewBag.Message != null)
            {
                <div style="border: 1px solid red">
                    @ViewBag.Message
                </div>
            }
            <table>
                <tr>
                    <td>@Html.LabelFor(a => a.User_ID, "User ID Number:", htmlAttributes: new { @class = "control-label col-md" })</td>
                    <td>@Html.EditorFor(a => a.User_ID, new { htmlAttributes = new { @class = "form-control" } })</td>
                    <td>@Html.ValidationMessageFor(a => a.User_ID, "User ID field is required", new { @class = "text-danger" })</td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(a => a.User_Password, "User Password:", htmlAttributes: new { @class = "control-label col-md" })
                    </td>
                    <td>
                        @Html.PasswordFor(a => a.User_Password, htmlAttributes: new { @class = "form-control" })
                    </td>
                    <td>
                        @Html.ValidationMessageFor(a => a.User_Password, "Please enter your password", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input class="btn btn-primary" type="submit" value="Login" />
                    </td>
                    <td></td>
                </tr>
            </table>
        </div>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</body>
</html>
