                @Html.ValidationMessageFor(model => model.Course_Assistant_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "CoursesList")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
