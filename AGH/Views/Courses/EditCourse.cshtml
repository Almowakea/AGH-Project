                @Html.DropDownList("Course_Instructor_ID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Course_Instructor_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Course_Assistant_ID, "Course_Assistant_ID", htmlAttributes: new { @class = "control-label col-md-2" })
